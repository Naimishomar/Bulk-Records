datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FM {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  FMID String @unique
  IDNumber String
  date String
  pendingAmount Float
  paymentRecords PaymentRecord[]
}


model PaymentRecord {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  IDNumber String
  date String
  customerName String
  amount Float
  amountInWords String
  pendingAmount Float
  transactionNumber String
  paymentMode String
  remarks String
  FM FM? @relation(fields: [FMID], references: [id], onDelete: Cascade)
  FMID String? @db.ObjectId
}
